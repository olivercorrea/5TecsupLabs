<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>CRUD de Usuarios</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
</head>
<body class="flex items-center justify-center h-screen">
  <div class="w-full max-w-md">
    <h1 class="text-2xl mb-4">Usuarios</h1>
    <form action="/users" method="POST" class="mb-4">
      <div class="mb-4">
        <label for="name" class="block mb-2">Nombre:</label>
        <input type="text" id="name" name="name" class="border border-gray-300 rounded-md px-2 py-1 w-full" />
        <% if (errors.name) { %>
          <p class="text-red-500 mt-1"><%= errors.name %></p>
        <% } %>
      </div>

      <div class="mb-4">
        <label for="email" class="block mb-2">Email:</label>
        <input type="email" id="email" name="email" class="border border-gray-300 rounded-md px-2 py-1 w-full" />
        <% if (errors.email) { %>
          <p class="text-red-500 mt-1"><%= errors.email %></p>
        <% } %>
      </div>

      <div class="mb-4">
        <label for="password" class="block mb-2">Contrase√±a:</label>
        <input type="password" id="password" name="password" required class="border border-gray-300 rounded-md px-2 py-1 w-full" />
        <% if (errors.password) { %>
          <p class="text-red-500 mt-1"><%= errors.password %></p>
        <% } %>
      </div>

      <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded-md hover:bg-green-600 w-full">
        Crear Usuario
      </button>
    </form>
    <hr class="my-4" />
    <h2 class="text-xl mb-2">Lista de Usuarios</h2>
    <ul>
      <% users.forEach((user) => { %>
        <li class="mb-2">
          <%= user.name %> (<%= user.email %>)
          <a href="/users/edit/<%= user._id %>" class="text-blue-500 mx-2">Editar</a>
          <a href="/users/delete/<%= user._id %>" class="text-red-500">Eliminar</a>
        </li>
      <% }) %>
    </ul>
    
    <% if (Object.keys(errors).length > 0) { %>
      <div class="bg-red-500 text-white p-4 mb-4">
        <% for (const key in errors) { %>
          <p><%= errors[key] %></p>
        <% } %>
      </div>
    <% } %>   

  </div>
</body>
</html>